#!/usr/bin/env bash
# Create PID file
echo "$$" > /var/run/myscript.pid

# Define signal handlers
trap 'echo "Y U no love me?!"' SIGINT
trap 'echo "I hate the kill command"' SIGTERM
trap 'rm -f /var/run/myscript.pid; exit 0' SIGQUIT

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 1
done

