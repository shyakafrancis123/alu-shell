#!/usr/bin/env bash
# Creates a PID file, prints "To infinity and beyond" indefinitely, handles signals and cleans up on exit

PIDFILE="/var/run/myscript.pid"

# Write the current PID to the pidfile
echo $$ > "$PIDFILE"

# Function to handle SIGINT (Ctrl+C)
handle_sigint() {
  echo "Y U no love me?!"
}

# Function to handle SIGTERM and SIGQUIT
handle_sigterm_quit() {
  echo "I hate the kill command"
  rm -f "$PIDFILE"
  exit 0
}

# Trap signals
trap handle_sigint SIGINT
trap handle_sigterm_quit SIGTERM SIGQUIT

# Infinite loop printing the message
while true; do
  echo "To infinity and beyond"
  sleep 1
done

