#!/usr/bin/env bash
# Init-style script to start, stop, restart manage_my_process process
restart() {
  # stop quietly
  if [ -f "$PIDFILE" ]; then
    pid=$(cat "$PIDFILE")
    kill "$pid" 2>/dev/null
    rm -f "$PIDFILE"
  fi

  # start quietly
  "$PROCESS_PATH" & 
  echo $! > "$PIDFILE"

  echo "manage_my_process restarted"
}

